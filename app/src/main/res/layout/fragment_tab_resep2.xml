<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TabResepFragment2">

    <ImageView
        android:id="@+id/empty_resepbg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/myresep_img"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"/>

    <TextView
        android:id="@+id/empty_titleresep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/belum_ada_resep_yang_diunggah"
        android:fontFamily="@font/sf_medium"
        android:textSize="19sp"
        android:textColor="@color/green_20"
        android:textAlignment="center"
        android:layout_marginTop="300dp"/>

    <TextView
        android:id="@+id/empty_titleresep2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/yuk_buat_kumpulan_resepmu_sendiri"
        android:fontFamily="@font/sf_medium"
        android:textSize="16sp"
        android:textColor="@color/green_sec20"
        android:textAlignment="center"
        android:layout_marginTop="335dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_resep"
        android:contentDescription="@string/tambah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#4CBAA4"
        android:src="@drawable/add_ic"
        android:layout_marginStart="310dp"
        android:layout_marginTop="480dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_mymenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="25dp"
        android:paddingBottom="60dp"/>

</FrameLayout>